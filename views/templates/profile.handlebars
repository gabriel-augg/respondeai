<div class="container p-5">
    <div class="row">
        <div class="col-3">
            <div class="aside-profile">
                <nav class="navbar ">
                    <ul class="navbar-nav">
                        <li class="nav-item p-3 profile-li actualy-page">
                            <a class="d-flex align-items-center" href="">
                                <img src="/assets/profile_user.svg" alt="">
                                <span class="ms-2" ><strong>Meu perfil</strong></span>
                            </a>
                        </li>
                        <li class="nav-item p-3 profile-li">
                            <a class="d-flex align-items-center" href="/minhas-perguntas">
                                <img src="/assets/profile_question.svg" alt="">
                                <span class="ms-2" ><strong>Minhas perguntas</strong></span>
                            </a>
                        </li>
                        <li class="nav-item p-3 profile-li">
                            <a class="d-flex align-items-center" href="/sair">
                                <img src="/assets/profile_exit.svg" alt="">
                                <span class="ms-2"><strong>Sair</strong></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
         <div class="col-9">
            <div class="d-flex align-items-center mb-2">
                <img src="/assets/user_img.svg" width="40" alt="">
                <span class="ms-1 h4 text-color-profile">Minha conta</span>
            </div>
            <div>
                <form action="/perfil" method="post" >
                    <div class="d-flex">
                        <div class="flex-grow-1 update-form p-2 d-flex flex-column">
                            <label class="pb-1" style="color: #0E0F1C;" for="name"> <strong>Nome</strong></label>
                            <input type="text" name="name" placeholder="Digite seu nome" value="{{user.name}}">
                        </div>
                        <div class="flex-grow-1 update-form p-2 d-flex flex-column">
                            <label class="pb-1" style="color: #0E0F1C;" for="email"> <strong>Email</strong></label>
                            <input type="email" name="email" placeholder="Digite seu email" value="{{user.email}}">
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="flex-grow-1 update-form p-2 d-flex flex-column">
                            <label class="pb-1" style="color: #0E0F1C;" for="password"> <strong>Senha</strong></label>
                            <input type="password" name="password" placeholder="Digite sua senha" required value="">
                        </div>
                        <div class="flex-grow-1 update-form p-2 d-flex flex-column">
                            <label class="pb-1" style="color: #0E0F1C;" for="newPassword"> <strong>Nova senha (opcional)</strong></label>
                            <input type="password" name="newPassword" placeholder="Digite sua nova senha">
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <input type="submit" class="profile-input p-2 px-3" value="Atualizar">
                    </div>
                </form>


            </div>
            
        </div>
    </div>

</div>